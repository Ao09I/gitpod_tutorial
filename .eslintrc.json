{
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["import", "jest"],
    "rules": {
      "no-unused-vars": "warn",
      "import/order": ["error", { "alphabetize": { "order": "asc" } }]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  }